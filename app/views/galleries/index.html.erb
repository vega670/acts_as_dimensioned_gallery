<% @galleries.each do |gallery| %>
	<div class="gallery">
		<%= link_to gallery.name, gallery %><br />
		Description: <%= gallery.description %><br />

		<%= link_to 'Edit', edit_gallery_path(gallery) %> |
                <%= link_to 'Delete', {:controller => :galleries, :action => :destroy, :id => gallery.id, :polymorphic => false}, :method => :delete, :confirm => "Are you sure?" %><br />
                <br />
	</div>
<% end %>
<%= @holder.class.name %>
<%= gallery_path(@galleries.first) %>
<%= Work.automatic_polymorphic_paths %>