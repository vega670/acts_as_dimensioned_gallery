<h1><%= @image.name %></h1>
<%= Image.unaltered_file.capitalize %>:
<%= @image.tag(Image.unaltered_file) %><br />

<% @gallery.dimensions.each do |dim| %>
  <%= "#{dim.name}: #{@image.tag(dim.name)}" %><br />
<% end %>

<div id="set_gallery_image">
  <%= link_to_remote('Set as gallery image', :update => 'set_gallery_image', :url => { :controller => 'aadgadmin/images', :action => :set_gallery_image, :gallery_id => @gallery.id, :id => @image.id }) %><br />
</div>
<%= link_to 'Back', @gallery %>