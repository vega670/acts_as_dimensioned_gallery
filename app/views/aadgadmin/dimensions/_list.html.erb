<% @gallery.dimensions.each do |dim| %>
  <div class="dimension">
    Name: <%= link_to dim.name, aadgadmin_gallery_dimension_path(@gallery, dim) %><br />
    Width: <%= dim.width %><br />
    Height: <%= dim.height %><br />
    Aspect: <%= dim.aspect %><br />
    Crop: <%= dim.crop %><br />
    Resize: <%= dim.resize %><br />
    <%= link_to 'Edit', edit_aadgadmin_gallery_dimension_path(@gallery, dim) %> |
    <span id="set_gallery_dimension_<%= dim.id.to_s %>"><%= link_to_remote('Set as Default Dimension', :update => 'set_gallery_dimension_' + dim.id.to_s, :url => { :controller => 'aadgadmin/dimensions', :action => :set_gallery_dimension, :id => dim.id, :gallery_id => @gallery }) %></span> |
    <%= link_to 'Remove', aadgadmin_gallery_dimension_path(@gallery, dim), :method => :delete, :confirm => "This will remove all images of dimension #{dim.name} from this gallery. Is this what you want to do?" %>
  </div>
<% end %>
<div style="clear:both;"></div>
<%= link_to 'New dimension', new_aadgadmin_gallery_dimension_path(@gallery) %>